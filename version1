import tkinter as tk
from tkinter import messagebox

def solicitar_vacaciones():
    ventana = tk.Tk()
    ventana.title("Solicitud de Vacaciones o dias inhabiles")
    ventana.geometry("400x300")
    ventana.config(bg="lightpink")

    tk.Label(ventana, text="Solicitud de Vacaciones o permisos", font=("Arial", 14, "bold"), bg="lightgreen").pack(pady=10)

    tk.Label(ventana, text="Nombre del trabajador:", bg="white").pack()
    entrada_nombre = tk.Entry(ventana)
    entrada_nombre.pack(pady=5)

    tk.Label(ventana, text="Area:", bg="white").pack()
    entrada_Area = tk.Entry(ventana)
    entrada_Area.pack(pady=5)

    tk.Label(ventana, text="Días solicitados:", bg="white").pack()
    entrada_dias = tk.Entry(ventana)
    entrada_dias.pack(pady=5)

    def enviar():
        nombre = entrada_nombre.get()
        depto = entrada_Area.get()
        try:
            dias = int(entrada_dias.get())
            if dias <= 0:
                raise ValueError
            mensaje = f"Solicitud enviada:\nNombre: {nombre}\nArea: {depto}\nDías: {dias}"
            messagebox.showinfo("Confirmación", mensaje)
        except ValueError:
            messagebox.showerror("Error", "Ingresa datos validos")

    tk.Button(ventana, text="Enviar solicitud", command=enviar).pack(pady=15)

    ventana.mainloop()

solicitar_vacaciones()
